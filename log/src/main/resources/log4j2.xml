<?xml version="1.0" encoding="UTF-8"?>
<configuration status="info">
    <appenders>

        <!--系统终端标准输出-->
        <Console name="CONSOLE" target="SYSTEM_OUT" follow="true">
            <PatternLayout pattern="[log4j222-log]%d{yyyy/MM/dd HH:mm:ss.SSS} %t [%p] %c{1} (%F:%L) %msg%n"/>
        </Console>


    </appenders>
    <loggers>
        <root level="info">
            <appender-ref ref="CONSOLE"/>
        </root>
    </loggers>
</configuration>